<!DOCTYPE html>
<html>
  <head>
      <% if logged_in? %>
      Zalogowany jako <%= current_user.login %>
      <%= link_to "Profil", current_user %>
      <%= link_to "Wyloguj", logout_path, method: :delete %>
      <% else %>
      <%= link_to "Zaloguj", login_path %>
      <% end %>
      <ul>
    <li><%= link_to "Strona główna", root_path %></li>
    <li><%= link_to "Smoki", smoks_path %></li>
    <li><%= link_to "Uzytkownicy", users_path %></li>
    <% if logged_in? %>
    <li><%= link_to current_user.login, current_user %></li>
    <li><%= link_to "Wyloguj", logout_path, method: :delete %></li>
    <% else %>
    <li><%= link_to "Zaloguj", login_path %></li>
    <% end %>
    </ul>
    <title>Smoki</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
