<p id="notice"><%= notice %></p>

<h1>Potions</h1>

<table>
  <thead>
    <tr>
      <th>Bonus hp</th>
      <th>Bonus mp</th>
      <th>Bonus atk</th>
      <th>Bonus exp</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @potions.each do |potion| %>
      <tr>
        <td><%= potion.bonus_hp %></td>
        <td><%= potion.bonus_mp %></td>
        <td><%= potion.bonus_atk %></td>
        <td><%= potion.bonus_exp %></td>
        <td><%= potion.user %></td>
        <td><%= link_to 'Show', potion %></td>
        <td><%= link_to 'Edit', edit_potion_path(potion) %></td>
        <td><%= link_to 'Destroy', potion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Potion', new_potion_path %>
